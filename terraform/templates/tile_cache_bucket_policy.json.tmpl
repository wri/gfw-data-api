{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:PutLifecycleConfiguration"
            ],
            "Resource": "${bucket_name}"
        },
        {
            "Effect": "Allow",
            "Action": "s3:*",
            "Resource": [
                "${bucket_name}/*"
            ]
        }
    ]
}